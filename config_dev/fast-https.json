{
  "log_root":"./logs",
  "pid": "./fast-https.pid",
  "http": {
    "include": "mime.types",
    "servers_limit": {
      "limit": 1000000,
      "burst": 5000000
    },
    "blaklist": [
      "192.168.11.1-192.168.11.150", 
      "192.168.1.151,59.66.66.66", 
      "192.168.1.151"
    ],
    "server": [
      {
        "listen": 8080,
        "server_name": "localhost",
        
        "location": [
          {
            "url": "/x",
            "type": "local",
            "root": "./httpdoc/root",
            "index":["index.html", "index.htm"] ,
            "limit": {
              "mem":10,
              "rate":2,
              "burst":2
            }
          },
          {
            "url": "/y",
            "type": "proxy",
            "proxy_pass": "http://127.0.0.1:80",
            "limit": {
              "mem":10,
              "rate":5,
              "burst":5
            }
          }
        ]
      },
      {
        "listen": "443 ssl",
        "server_name": "localhost",
        "ssl_certificate": "config/cert/localhost.pem",
        "ssl_certificate_key": "config/cert/localhost-key.pem",
        "location": [
          {
            "url": "/",
            "type": "local",
            "root": "./httpdoc/root",
            "index":["index.html", "index.htm"] 
          }
        ]
      },
      {
        "listen": 8081,
        "server_name": "localhost",
        "location": [
          {
            "url": "/",
            "type": "local",
            "root": "./httpdoc/root",
            "index":["index.html", "index.htm"] 
          }
        ]
      },
      {
        "listen": 9090,
        "server_name": "localhost",
        "location": [
          {
            "url": "/",
            "type": "proxy",
            "proxy_pass": "http://127.0.0.1:5000",
            "proxy_set_header" : [
              {
                "HeaderKey": "Connection",
                "HeaderValue": "close"
              },
              {
                "HeaderKey": "Host",
                "HeaderValue": "$proxy_host"
              },
              {
                "HeaderKey": "X-real-ip",
                "HeaderValue": "$remote_addr"
              },{
                "HeaderKey": "X-Forwarded-For",
                "HeaderValue": "$proxy_add_x_forwarded_for"
              }
            ]
          }
        ]
      },
      {
        "listen": 7000,
        "server_name": "localhost",
        "location": [
          {
            "url": "/api1",
            "type": "rewrite",
            "rewrite": "http://club.quwancode.com"
          }
        ]
      }
    ]
  }
}
